extends ./user/maintemplate.jade

block vars
  - var title = 'login'
block nav
  
block dashboard
  
    
    .container    
      .row
        .col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
          form.form-signin(method='post')
            h1.form-signin-heading.m-t-3 Please Sign-In
          
            fieldset.form-group
              label(for='inputEmail') Email address:
              input#inputEmail.form-control(type='email', name='email', required='', autofocus='')
            fieldset.form-group
              label(for='inputPassword') Password:
              input#inputPassword.form-control(type='password', name='password', required='')
            button.btn.btn-lg.btn-primary(type='submit') Sign in

