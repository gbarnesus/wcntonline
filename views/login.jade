extends ./maintemplate.jade

block vars
  - var title = 'login'
block nav
  
block content
  
    
    .container    
      .row
        .col-sm-6.col-sm-offset-3.col-lg-4.col-lg-offset-4
          form.form-signin(method='post')
            h1.form-signin-heading.m-t-3 Please Sign-In
          
            fieldset.form-group
              label(for='inputEmail') Email address:
              input#inputEmail.form-control(type='email', name='email', required='', autofocus='')
            fieldset.form-group
              label(for='inputPassword') Password:
              input#inputPassword.form-control(type='password', name='password', required='')
            button.btn.btn-lg.btn-primary(type='submit') Sign in

    // /container
    //
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="/js/jquery.min.js"><\\/script>')
    script(src='/js/bootstrap.min.js')
