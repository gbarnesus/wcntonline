extends ./adminTemplate.jade

block vars

  - var title = 'Admin Dashboard'


block content
    .container
      // Main component for a primary marketing message or call to action
      .jumbotron
  
          h1 Upload Punchlist Item

          if status
            p Status: #{status}
          form(method="post")
            
            
            Span Project Name:
            select(name='projectName')
              for project in allProjects
                option(value=project.projectInfo.name) #{project.projectInfo.name}
                br
            br    
            span Item Number: 
            input(type="text", name="itemNumber", required=true)
            br

            span Description: 
            input(type="text", name="punchDescription", required=true)
            br

            span Creation Date: 
            input(type="text", name="creationDate", required=true)
            br

            span Responsible Contractor:
            input(type="text", name="responsibleContractor", required=true)
            br

            span Due Date: 
            input(type="text", name="dueDate", required=true)
            br
            
            span Status: 
            input(type="text", name="punchStatus", required=true)
            br
            
            
            input(type="submit")
    // /container
    //
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="/js/jquery.min.js"><\\/script>')
    script(src='/js/bootstrap.min.js')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    script(src='/js/ie10-viewport-bug-workaround.js')
