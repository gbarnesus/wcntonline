extends ./maintemplate.jade

block vars
  - var title = 'UploadDocument'
block nav
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li 
          a(href='/adminDashboard') Admin Dashboard
        li
          a(href='/Register') Register Contractor
        li
          a(href='/createProject') Create Project
        li
          a(href='/uploadDocument') Upload Document
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/logout') Log Out
block content
  h1 Upload Document

  if error
    p ERROR: #{error}
  h2 Upload rfi
  form(method="post")
    input(type="hidden", name="_csrf", value=csrfToken)
    
    Span Project Name:
    select(name='projectName', multiple='')
      for project in allProjects
        option(value=project.projectInfo.name) #{project.projectInfo.name}
        br
    span Item Number: 
    input(type="text", name="itemNumber", required=true)
    br

    span Description: 
    input(type="text", name="punchDescription", required=true)
    br

    span Creation Date: 
    input(type="text", name="creationDate", required=true)
    br

    span Responsible Contractor:
    input(type="text", name="responsibleContractor", required=true)
    br

    span Due Date: 
    input(type="text", name="dueDate", required=true)
    br
    
    span Status: 
    input(type="text", name="punchStatus", required=true)
    br
    
    
    input(type="submit")
