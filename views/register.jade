extends ./maintemplate.jade

block vars
  - var title = 'Register'
block nav
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li 
          a(href='/adminDashboard') Admin Dashboard
        li
          a(href='/Register') Register Contractor
        li
          a(href='/createProject') Create Project
        li
          a(href='/uploadDocument') Upload Document
      ul.nav.navbar-nav.navbar-right
        li
          a(href='/logout') Log Out

block content
  h1 Create an Account

  if error
    p ERROR: #{error}
    
  form(method="post")
    input(type="hidden", name="_csrf", value=csrfToken)

    span First Name:
    input(type="text", name="firstName", required=true)
    br

    span Last Name:
    input(type="text", name="lastName", required=true)
    br

    span Email:
    input(type="email", name="email", required=true)
    br
    
    span Company:
    input(type="text", name="company", required=true)
    br
    
    span Admin:
    input(type="text", name="admin", required=true)
    br

    span Password:
    input(type="password", name="password", required=true)
    br

    input(type="submit")
