extends ./adminTemplate.jade

block vars

  - var title = 'Dashboard'

block nav
  a.nav-item.nav-link(href='/adminDashboard') Admin Dashboard
  a.nav-item.nav-link(href='/adminsubmittals/'+ reqID) Update Submittals
  a.nav-item.nav-link(href='/adminrfis/'+ reqID) Update RFIS
  a.nav-item.nav-link(href='/adminpunchlist/'+ reqID) Update Punchlist
  a.nav-item.nav-link(href='/uploadSubmittal/'+ reqID) Upload Submittals
  a.nav-item.nav-link(href='/uploadRFI/'+ reqID) Upload RFIS
  a.nav-item.nav-link(href='/uploadPunchListItem/'+ reqID) Upload Punchlist

block content
    .container
      // Main component for a primary marketing message or call to action
      h1.m-t-3 Upload Submittal
      if error
        p ERROR: #{error}
      form(method="post" enctype="multipart/form-data")
        input(type="hidden" value=reqId name="projectNumber")
        feildset.formgroup
          label(for="submittalNumber") Number:
          input.form-control(type="text", name="submittalNumber", required=true)
        feildset.formgroup
          label(for="submittalSubject") Subject:
          input.form-control(type="text", name="submittalSubject", required=true)
        feildset.formgroup
          label(for="submittalSpecification") Spec Section:
          input.form-control(type="text", name="submittalSpecification", required=true)
        feildset.formgroup
          label(for="responsibleContractor") Responsible Contractor:
          input.form-control(type="text", name="responsibleContractor", required=true)
        feildset.formgroup
          label(for="submittalStatus") Submittal Status:
          input.form-control(type="text", name="submittalStatus", required=true)
        feildset.formgroup
          label(for="reviewer") Reviewer:
          input.form-control(type="text", name="reviewer", required=true)
        feildset.formgroup
          label(for="reviewDate") Review Date:
          input.form-control(type="text", name="reviewDate", required=true)
        feildset.formgroup
          label(for="reviewCode") Review Code:
          input.form-control(type="text", name="reviewCode", required=true)
        fieldset.formgroup
          label(for="submittals") File Upload
          input.form-control-file(type="file" name="submittalUpload")
          small.text-muted Upload Submittal Documents Here
          br
      
        button.btn.btn-primary.m-t-1(type="submit") Submit
    // /container
    //
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="/js/jquery.min.js"><\\/script>')
    script(src='/js/bootstrap.min.js')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    script(src='/js/ie10-viewport-bug-workaround.js')
