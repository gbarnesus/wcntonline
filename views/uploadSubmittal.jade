extends ./adminTemplate.jade

block vars

  - var title = 'Admin Dashboard'


block content
    .container
      // Main component for a primary marketing message or call to action
      h1.m-t-3 Upload Submittal
      if error
        p ERROR: #{error}
      form(method="post")
        feildset.formgroup
          label.m-t-2(for="projectName") Project:
          select.form-control(name='projectName')
            for project in allProjects
              option(value=project.projectInfo.name) #{project.projectInfo.name}
        feildset.formgroup
          label(for="submittalNumber") Number:
          input.form-control(type="text", name="submittalNumber", required=true)
        feildset.formgroup
          label(for="submittalSubject") Subject:
          input.form-control(type="text", name="submittalSubject", required=true)
        feildset.formgroup
          label(for="submittalSpecification") Spec Section:
          input.form-control(type="text", name="submittalSpecification", required=true)
        feildset.formgroup
          label(for="responsibleContractor") Responsible Contractor:
          input.form-control(type="text", name="responsibleContractor", required=true)
        feildset.formgroup
          label(for="submittalStatus") Submittal Status:
          input.form-control(type="text", name="submittalStatus", required=true)
        feildset.formgroup
          label(for="reviewer") Reviewer:
          input.form-control(type="text", name="reviewer", required=true)
        feildset.formgroup
          label(for="reviewDate") Review Date:
          input.form-control(type="text", name="reviewDate", required=true)
        feildset.formgroup
          label(for="reviewCode") Review Code:
          input.form-control(type="text", name="reviewCode", required=true)
      
          button.btn.btn-primary.m-t-1(type="submit") Submit
    // /container
    //
      Bootstrap core JavaScript
      ==================================================
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="/js/jquery.min.js"><\\/script>')
    script(src='/js/bootstrap.min.js')
    // IE10 viewport hack for Surface/desktop Windows 8 bug
    script(src='/js/ie10-viewport-bug-workaround.js')
