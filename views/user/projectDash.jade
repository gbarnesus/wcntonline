extends ./projectNavigation.jade

block vars
  - var title = 'Project Dashboard'

block content

  
  
  .container-fluid
    h1 #{project.projectInfo.name}
    table.table.table-hover.table-striped
      thead.thead-default
        tr
          th Project Name
          th Project Number
          th Address
          th Project Manager 
          th Email 
          th Phone
          th Project Superintendent
          th Email 
          th Phone
          th Download
      tbody
        tr(scope="row")
          td 
            a(href='/projectDash/'+project.projectInfo.number) #{project.projectInfo.name}
          td #{project.projectInfo.number}
          td #{project.projectInfo.address}
          td #{project.projectTeam.projectManager.name}
          td #{project.projectTeam.projectManager.email}
          td #{project.projectTeam.projectManager.phone}
          td #{project.projectTeam.projectSuperindendent.name}
          td #{project.projectTeam.projectSuperindendent.email}
          td #{project.projectTeam.projectSuperindendent.phone}
          td 
            a(href="../uploads/#{project.projectInfo.number}/plans-specs/#{project.plans[0].filename}plans.pdf") Plans 
            a(href="../uploads/#{project.projectInfo.number}/plans-specs/#{project.specs[0].filename}specs.pdf") Specs
          
    // /container
    //
    // jQuery first, then Bootstrap JS.
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js', integrity='sha384-vZ2WRJMwsjRMW/8U7i6PWi6AlO1L79snBrmgiDpgIWJ82z8eA5lenwvxbMV1PAh7', crossorigin='anonymous')
